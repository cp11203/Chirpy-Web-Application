<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Post</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.2/lux/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Create a New Post</h1>
        <form action="main/post" method="post" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="content">Content:</label>
                <textarea class="form-control" id="content" name="content" rows="4" required></textarea>
                <small id="content-help" class="form-text text-muted">Maximum 240 characters.</small>
            </div>
            <div class="form-group">
                <label for="hashtag">Hashtag:</label>
                <input type="text" class="form-control" id="hashtag" name="hashtag" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <p id="successMessage" style="display:none; color: green;">Post added successfully!</p>
        <a href="/main/" class="btn btn-secondary mt-3">Return to Main Page</a>
    </div>
    <script>
        function validateForm() {
            var content = document.getElementById('content').value;
            var hashtag = document.getElementById('hashtag').value;

            // Validate content length
            var contentLength = content.trim().length;
            if (contentLength === 0 || contentLength > 240) {
                document.getElementById('content-help').textContent = "Content must be between 1 and 240 characters.";
                return false;
            }

            // Display success message if conditions are met
            document.getElementById('successMessage').style.display = 'block';
            return true;
        }
    </script>
</body>
</html>
